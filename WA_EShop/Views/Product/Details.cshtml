@model Products

@{
    ViewBag.Title = Model.ProductName;
}

<div id="details" class="container pb-5">
    <div class="row">
        <div class="col-md-6">
            <img src="~/Images/@Html.DisplayFor(Model => Model.Picture)" class="img-fluid rounded">
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.ProductName</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @if (Model.UnitsInStock > 0)
                    {
                        <span class="badge badge-primary">Stokta</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Stokta Yok</span>
                    }

                    <span class="product-number">#@Model.ProductNumber</span>
                </div>
            </div>
            @* <div class="row mt-2">
                <div class="col-md-12">
                    <div id="description">
                        @Model.Description
                    </div>
                </div>

            </div> *@
            <div class="row mt-2">
                <div class="col-md-4">
                    <i class="fa-thin fa-star"></i>
                    <i class="fa-thin fa-star"></i>
                    <i class="fa-thin fa-star"></i>
                    <i class="fa-thin fa-star"></i>
                    <i class="fa-thin fa-star"></i>
                    <span class="badge badge-success">100</span>
                </div>
@*                 <div id="write-review" class="col-md-4">
                    <a href="#">Yorum Yaz</a>
                </div> *@
            </div>
            <div class="row mt-2">
                <div class="col-md-12">
                    <h4 id="price">@Model.UnitPrice.Value.ToString("C")</h4>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-md-12">
                    <button class="btn btn-success">
                        <i class="fa-solid fa-cart-plus"></i> Sepete Ekle
                    </button>
                </div>
            </div>

        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12 ">
            <div class="bd-example bd-example-tabs">
                <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active show" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Açıklama</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Özellikler</a>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade active show" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                        <p>@Model.Features</p>
                    </div>
                    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                        <p>@Model.Description</p>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
