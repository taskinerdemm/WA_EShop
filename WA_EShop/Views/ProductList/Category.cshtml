@model List<Products>


<div class="container pb-5">
    <div class="row">
        <div class="col-md-3">
            @await Component.InvokeAsync("Menu")
        </div>





        <div class="col-md-9">
            <div class="row">
                <div class="container">
                    @if (Model.Count() == 0)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                            Bu kategoride bir ürün bulunamadı.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="fa-regular fa-circle-check" aria-hidden="true"></i>
                            @Model.Count() adet ürün bulundu.
                        </div>
                    }
                </div>
                @foreach (Products item in Model)
                {
                    <div class="col-md-4 mb-5">
                        <div class="card">
                            <img class="card-img-top img-fluid" src="~/Images/@Html.DisplayFor(Model => item.Picture)" style="width:auto; height:200px;" alt="@item.ProductName">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="/Product/Details/@item.ProductId">
                                        @item.ProductName
                                    </a>
                                </h5>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted product-price">
                                    @item.UnitPrice.Value.ToString("C")
                                </small>
                                <a href="/Product/Details/@item.ProductId" class="btn btn-outline-warning btn-sm float-right">
                                    <i class="fa-solid fa-angles-right"></i>
                                    Ürünü İncele
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
