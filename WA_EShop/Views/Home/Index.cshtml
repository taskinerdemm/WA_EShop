@model List<Products>

@{
    ViewBag.Title = "Ana Sayfa";
}


<div class="container mb-5">
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="/img/KulaklıkBanner.png" style="width:300px; height:200px;" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/img/LaptopBanner.png" style="width:300px; height:200px;" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/img/TelefonBanner.png" style="width:300px; height:200px;" alt="Third slide">
            </div>
        </div>
    </div>
</div>
<br />
<br />

<div class="container">
    <h4>Telefon Modelleri</h4>
    <hr />
    <br />
    <div class="row">
        @foreach (Products item in Model.Where(Products => Products.CategoryId == 1).ToList())
        {
            <div class="col-md-3 mb-5">
                <div class="card">
                    <img class="card-img-top img-fluid" src="../Images/@item.Picture" style="width:257px; height:200px;" alt="@item.ProductName">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="/Product/Details/@item.ProductId">
                                @item.ProductName
                            </a>
                        </h5>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted product-price">
                            @item.UnitPrice.Value.ToString("C")
                        </small>
                        <a href="/Product/Details/@item.ProductId" class="btn btn-outline-warning btn-sm float-right">
                            <i class="fa-solid fa-angles-right"></i>
                            Ürünü İncele
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<br />
<br />

